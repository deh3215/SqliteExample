<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a32150.sqliteexample.AddActivity">
    <EditText
        android:id="@+id/txname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Phone"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/txname" />

    <EditText
        android:id="@+id/txaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Address"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/txphone"
        android:layout_marginLeft="54dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="42dp"
        android:text="Back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txaddress" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="93dp"
        android:layout_height="41dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="42dp"
        android:onClick="clickAdd"
        android:text="Add"
        app:layout_constraintLeft_toRightOf="@+id/btnback"
        app:layout_constraintTop_toBottomOf="@+id/txaddress" />
</android.support.constraint.ConstraintLayout>
