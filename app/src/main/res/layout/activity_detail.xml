<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a32150.sqliteexample.DetailActivity">

    <TextView
        android:id="@+id/tvid"
        android:layout_width="177dp"
        android:layout_height="32dp"
        android:layout_marginLeft="67dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="249dp"
        android:layout_height="81dp"
        android:layout_marginLeft="67dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvid" />

    <TextView
        android:id="@+id/tvphone"
        android:layout_width="251dp"
        android:layout_height="92dp"
        android:layout_marginLeft="67dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/tvname" />

    <TextView
        android:id="@+id/tvaddr"
        android:layout_width="256dp"
        android:layout_height="94dp"
        android:text="TextView"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tvphone"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="101dp"
        android:onClick="clickBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvaddr"
        app:srcCompat="@android:drawable/ic_menu_set_as" />

    <ImageButton
        android:id="@+id/btndelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="101dp"
        android:onClick="clickDelete"
        app:layout_constraintLeft_toRightOf="@+id/btnback"
        app:layout_constraintTop_toBottomOf="@+id/tvaddr"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/btnedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickEdit"
        app:srcCompat="@android:drawable/ic_menu_edit"
        app:layout_constraintLeft_toRightOf="@+id/btndelete"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="101dp"
        app:layout_constraintTop_toBottomOf="@+id/tvaddr" />

</android.support.constraint.ConstraintLayout>
